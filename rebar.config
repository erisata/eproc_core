{erl_opts, [
    debug_info,
    {platform_define, "^[0-9]+", namespaced_types} % Just for the hamcrest library.
]}.
{deps, [
    %%
    %%  Transitive deps.
    %%
    {goldrush,   ".*", {git, "https://github.com/DeadZen/goldrush.git",                 {tag, "0.1.7"}}},       % lager
    {gen_leader, ".*", {git, "https://github.com/garret-smith/gen_leader_revival.git",  {tag, "a12a4e3b3f"}}},  % gproc
    %%
    %%  Main deps.
    %%
    {gproc,      ".*", {git, "https://github.com/uwiger/gproc.git",                     {tag, "0.5"}}},
    {lager,      ".*", {git, "https://github.com/basho/lager.git",                      {tag, "3.0.0"}}},
    %%
    %%  Deps for tests.
    %%
    {meck,             ".*", {git, "https://github.com/eproxus/meck.git",                {tag, "0.8.3"}}},
    {hamcrest,         ".*", {git, "https://github.com/hyperthunk/hamcrest-erlang.git",  {tag, "908a24fda4"}}},
    {eunit_formatters, ".*", {git, "https://github.com/seancribbs/eunit_formatters.git", {tag, "d4cc6e4e7d"}}},
    {edown,            ".*", {git, "https://github.com/uwiger/edown.git",                {tag, "b7c8eb0ac1"}}}
]}.
{post_hooks, [
    {clean, "rm -f ebin/eproc_core.appup"},
    {compile, "sed \"s/{git,/{\\\"`git describe --always --tags`\\\",/\" src/eproc_core.appup.src > ebin/eproc_core.appup"}
]}.
{ct_dir, "itest"}.
{eunit_opts, [no_tty, {report, {eunit_progress, [colored]}}]}.
{edoc_opts, [
    {application, ["eproc_core"]},
    {doclet, edown_doclet},
    {subpackages, false},
    {top_level_readme, {"./README.md", "http://github.com/erisata/eproc_core"}}
]}.
